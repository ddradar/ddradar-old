{
  "name": "ddradar",
  "version": "0.2.0",
  "description": "DDR Score Tracker",
  "author": "nogic",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "start": "tsc -p ./song-info/tsconfig.json && node ./song-info/dist/song-info/src/index.js",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{json,yaml,yml}\"",
    "lint:tsc": "tsc --noEmit",
    "test": "jest",
    "test:all": "jest --config jest.config.all.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint --fix",
    "*.{json,yaml,yml}": "prettier --write"
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.3.10",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "buefy": "^0.8.12",
    "chart.js": "^2.9.3",
    "firebase": "^7.9.3",
    "firebase-admin": "^8.9.2",
    "jest-fetch-mock": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.11.0",
    "nuxt-buefy": "^0.3.23",
    "nuxt-property-decorator": "^2.5.1",
    "vue-chartjs": "^3.5.0",
    "vuex-module-decorators": "^0.16.1"
  },
  "devDependencies": {
    "@firebase/testing": "^0.16.13",
    "@nuxt/typescript-build": "^0.5.8",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@types/chart.js": "^2.9.14",
    "@types/jest": "^25.1.3",
    "@types/jest-json-schema": "^2.1.1",
    "@vue/test-utils": "^1.0.0-beta.31",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-nuxt": "^0.5.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "husky": "^4.2.3",
    "jest": "~25.1.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-json-schema": "^2.1.0",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "ts-jest": "~25.2.1",
    "vue-jest": "^4.0.0-0"
  }
}
