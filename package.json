{
  "name": "ddradar",
  "version": "0.1.2",
  "description": "DDR Score Tracker",
  "author": "nogic",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "start": "tsc -p ./song-info/tsconfig.json && node ./song-info/dist/index.js",
    "generate": "nuxt-ts generate",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "test:all": "jest --config jest.config.all.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/__firebase__/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.vue",
      "<rootDir>/pages/**/*.vue",
      "<rootDir>/plugins/**/*.ts",
      "<rootDir>/types/**/*.ts"
    ]
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.3.2",
    "@nuxtjs/pwa": "^3.0.0-0",
    "chart.js": "^2.9.3",
    "firebase": "^7.6.0",
    "firebase-admin": "^8.8.0",
    "nuxt": "^2.0.0",
    "nuxt-buefy": "^0.3.19",
    "nuxt-property-decorator": "^2.5.0",
    "vue-chartjs": "^3.5.0",
    "vuex-module-decorators": "^0.11.0"
  },
  "devDependencies": {
    "@firebase/testing": "^0.16.3",
    "@nuxt/types": "^0.5.6",
    "@nuxt/typescript-build": "^0.5.1",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@types/chart.js": "^2.9.5",
    "@types/jest": "^24.0.23",
    "@types/jest-json-schema": "^2.1.1",
    "@vue/test-utils": "^1.0.0-beta.30",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.1.0",
    "codecov": "^3.6.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.0.1",
    "fs": "0.0.1-security",
    "husky": "^3.1.0",
    "jest": "~24.9.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-json-schema": "^2.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "ts-jest": "~24.2.0",
    "vue-jest": "^4.0.0-0"
  }
}
