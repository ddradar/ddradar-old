{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended",
    "plugin:nuxt/recommended"
  ],
  "plugins": ["jest", "prettier", "simple-import-sort"],
  "rules": {
    "import/order": "off",
    "no-process-env": "error",
    "no-useless-constructor": "off",
    "simple-import-sort/sort": "error",
    "sort-imports": "off"
  }
}
